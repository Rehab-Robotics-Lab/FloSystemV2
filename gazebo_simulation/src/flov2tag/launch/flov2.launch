<launch>
    <arg name="arg_x" default="0.00" />
    <arg name="arg_y" default="0.00" />
    <arg name="arg_z" default="0.00" />
    <arg name="arg_R" default="0.00" />
    <arg name="arg_P" default="0.00" />
    <arg name="arg_Y" default="0.00" />
    
    <!-- Urdf file path -->
    <param name="robot_description" textfile="$(find flov2tag)/urdf/flov2tag.urdf"/>
    
    <!-- Spawn an empty Gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch" />
    <node name="tf_footprint_base" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 base_link base_footprint 40" />
    
    <!-- Spawn robot model -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-x $(arg arg_x) -y $(arg arg_y) -z $(arg arg_z) -Y $(arg arg_Y) -param robot_description -urdf -model flov2tag -J r1 0.0 -J r2 0.0 -J r3 0.0 -J r4 0.0 -J r1 0.0 -J r2 0.0 -J r3 0.0 -J r4 0.0 -J rt 0.0 -J lt 0.0" />

    <!-- Load and launch the joint trajectory controller -->
    <rosparam file ="$(find flov2tag)/config/joint_trajectory_controller.yaml" command="load"/>
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="joint_state_controller robot_arm_controller hand_ee_controller"/>
    
    <!-- Robot State Publisher for TF of each joint: publishes all the current states of the joint, then RViz can visualize -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>

    <!-- Spawn AprilTag model -->
    <node name="spawn_apriltag" pkg="gazebo_ros" type="spawn_model" args="-sdf -file $(find flov2tag)/meshes/apriltag_model/model.sdf -model apriltag_model -x 1.0 -y 1.0 -z 0.5" />

    <!-- Launch subscriber node for AprilTag detection -->
    <node name="subscriber_apriltag" pkg="test_moveit" type="subscriber_apriltag.py" output="screen" />
</launch>
